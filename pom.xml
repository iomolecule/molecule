    <reporting>
        <plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-javadoc-plugin</artifactId>
                <version>3.0.1</version>
                <configuration>

                    <overview>${basedir}/molecule-impl/src/main/javadoc/overview.html</overview>
                    <!-- Specific configuration for the aggregate report -->
                    <excludePackageNames>com.github.bogieclj.molecule.mod.test1.*:com.github.bogieclj.molecule.mod.test2.*:com.github.bogieclj.molecule.playground.*</excludePackageNames>
                </configuration>
                <reportSets>
                    <reportSet>
                        <id>non-aggregate</id>
                        <configuration>
                        </configuration>
                        <reports>
                            <report>javadoc</report>
                        </reports>
                    </reportSet>
                    <reportSet>
                        <id>aggregate</id>
                        <configuration>
                        </configuration>
                        <reports>
                            <report>index</report>
                            <report>aggregate</report>
                        </reports>
                    </reportSet>
                </reportSets>
            </plugin>
        </plugins>

